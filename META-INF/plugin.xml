<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin version="2">
    <name>iBATIS Plugin</name>
    <description><![CDATA[
    <html>
        The plugin for IntelliJ IDEA to accelerate iBATIS developement.
        Please visit <a href="http://code.google.com/p/ibatis-plugin">http://code.google.com/p/ibatis-plugin</a> for detail.
    </html>
    ]]></description>
    <version>0.4.2</version>
    <vendor email="linux_china@hotmail.com" url="http://code.google.com/p/ibatis-plugin">Jacky Chan</vendor>
    <idea-version since-build="7290"/>
    <depends>com.intellij.javaee</depends>
    <change-notes>
        <![CDATA[
                <ul>
                  <li>Code completion for table column and inline parameter in SQL sentence</li>
                  <li>Inspection for invalid inline parameter name</li>
                  <li>Bug fix and minor performance enhanced</li>
               </ul>                       
        ]]>
    </change-notes>
    <extensions xmlns="com.intellij">
        <applicationService serviceInterface="org.intellij.ibatis.IbatisManager"
                            serviceImplementation="org.intellij.ibatis.impl.IbatisManagerImpl"/>
        <dom.fileDescription implementation="org.intellij.ibatis.IbatisConfigurationFileDescription"/>
        <dom.fileDescription implementation="org.intellij.ibatis.IbatisSqlMapFileDescription"/>
        <dom.fileDescription implementation="org.intellij.ibatis.IbatisAbatorFileDescription"/>
        <gotoSymbolContributor implementation="org.intellij.ibatis.GoToSqlMapReferenceIdSymbolProvider"/>
    </extensions>
    <application-components>
        <component>
            <implementation-class>org.intellij.ibatis.IbatisApplicationComponent</implementation-class>
        </component>
    </application-components>
    <project-components>
        <component>
            <implementation-class>org.intellij.ibatis.IbatisProjectComponent</implementation-class>
        </component>
        <component>
            <implementation-class>org.intellij.ibatis.IbatisReferenceProvider</implementation-class>
        </component>
    </project-components>
    <actions>
        <action id="org.intellij.ibatis.actions.ModelClassGeneratorAction"
                class="org.intellij.ibatis.actions.ModelClassGeneratorAction" text="Model Class Generation"
                description="Generate model class acccording to table name in the database" icon="/icons/logo.png">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewAnnotationType"/>
        </action>
    </actions>
</idea-plugin>